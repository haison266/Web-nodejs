
{{!-- 
It's a course creation form that allows users to input details for a new course
The form submits data via POST method to the "courses/store" endpoint
 --}}
<div class="mt-4">
    <h3>Edit a course</h3>
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <form class="mt-4" method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Course Title</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter title" value="{{formData.name}}" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" placeholder="Enter description" required>{{formData.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">YouTube Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Enter YouTube video ID" value="{{formData.videoId}}" required>
            <small class="form-text text-muted">Enter the YouTube video ID (e.g., for https://www.youtube.com/watch?v=ABC123, enter ABC123)</small>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>